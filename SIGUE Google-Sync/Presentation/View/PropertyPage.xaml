<UserControl
    x:Class="GMapsSync.Presentation.View.PropertyPageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="clr-namespace:GMapsSync.Presentation.ViewModel"
    xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300"
    d:DataContext="{Binding Path=ui.PropertyPageViewModel}"
>
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="10,10,10,10" Grid.IsSharedSizeScope="True">
        <StackPanel Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Set Options for sharing" Style="{DynamicResource Esri_TextBlockH3}" Margin="0,0,0,10" />

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="Navegador:" Style="{DynamicResource Esri_TextBlockRegular}" VerticalAlignment="Center" Width="120" />
                <ComboBox Width="180" SelectedIndex="0">
                    <ComboBoxItem Content="Google Chrome" />
                    <ComboBoxItem Content="Firefox" />
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Seleccionar driver:" Style="{DynamicResource Esri_TextBlockRegular}" VerticalAlignment="Center" Width="120" />
                <TextBox x:Name="HomeFolderTextBox" Margin="0,0,5,0" Width="180" Height="22" />
                <Button Content="..." Width="30" Height="22" Style="{DynamicResource Esri_Button}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>