{
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "cSpell.ignorePaths": [
    "package-lock.json",
    "node_modules",
    "vscode-extension",
    ".git/{info,lfs,logs,refs,objects}/**",
    ".git/{index,*refs,*HEAD}",
    ".vscode",
    ".vscode-insiders",
    "SIGUE Google-Sync.sln",
    "SIGUE Google-Sync/Config.daml",
    "SIGUE Google-Sync/SIGUE Google-Sync.csproj"
  ],
  "cSpell.words": ["Addin", "EAAB", "EPSG"],
  "files.autoSave": "afterDelay",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.removeUnused": "explicit"
  },
  "files.associations": {
    "*.daml": "xml",
    "*.xaml": "xml"
  },
  "xml.format.maxLineWidth": 180
}
